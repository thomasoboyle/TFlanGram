<div class='row'>
  <div class="col">
    <h1><span class="badge success">Workout Details</span></h1>
    <p>
      <strong>Date:</strong>
      <%= @workout.date %>
    </p>

    <p>
      <strong>Start Time:</strong>
      <%= @workout.start_time %>
    </p>

    <p>
      <strong>End Time:</strong>
      <%= @workout.end_time %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @workout.description %>
    </p>

    <p>
      <strong>Location:</strong>
      <%= @workout.location %>
    </p>
    <p>
      <strong>Distance:</strong>
      <%= @workout.duration %> Minutes
    </p>

    <p>
      <%= link_to 'Edit', edit_workout_path(@workout), class: 'paper-btn' %>
    </p></br>
    <p>
    <%= link_to 'Delete', workout_path(@workout),
            method: :delete,
            data: { confirm: 'Are you sure?' }, class: 'paper-btn' %>
  </p></br>
    <p>
      <%= link_to 'View All Workouts', workouts_path, class: 'paper-btn' %>
    </p>
  </div>
</div>
