          <%= f.label :start_time %><br>
          <%= f.time_field :start_time %>
        </div>

        <div class="input-field col s6">
          <%= f.label :end_time %><br>
          <%= f.time_field :end_time %>
        </div>

        <div class="input-field col s6">
          <%= f.label :location %><br>
          <%= f.text_field :location %>
        </div>

        <div class="input-field col s6">
          <%= f.label :distance %><br>
          <%= f.number_field :distance %>
        </div>

        <div class="input-field col s12">
          <%= f.label :description %>
          <%= f.text_field :description %>
