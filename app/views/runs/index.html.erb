<div>
  <div class="col">
    <h1>Runs Index</h1>

    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Location</th>
          <th>Distance</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <% @runs.each do |run| %>
        <tbody>
          <tr>
            <td><%= run.date %></td>
            <td><%= run.location %></td>
            <td><%= run.distance %>Miles</td>
            <td><%= link_to 'View', run_path(run) %></td>
            <td><%= link_to 'Edit', edit_run_path(run) %></td>
          </tr>
        </tbody>
      <% end %>

    </table>

    <%= link_to 'Record new run', new_run_path %>
  </div>
</div>
