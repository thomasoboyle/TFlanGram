<div class='row'>
  <div class="col">
    <h1><span class="badge secondary">Run Details</span></h1>

    <p>
      <strong>Date:</strong>
      <%= @run.date %>
    </p>

    <p>
      <strong>Start Time:</strong>
      <%= @run.start_time %>
    </p>

    <p>
      <strong>End Time:</strong>
      <%= @run.end_time %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @run.description %>
    </p>

    <p>
      <strong>Location:</strong>
      <%= @run.location %>
    </p>
    <p>
      <strong>Distance:</strong>
      <%= @run.distance %> Miles
    </p></br>

    <p>
      <%= link_to 'Edit', edit_run_path(@run), class: 'paper-btn' %></br>
    </p></br>
    <p>
    <%= link_to 'Delete', run_path(@run),
            method: :delete,
            data: { confirm: 'Are you sure?' }, class: 'paper-btn' %></br>
    </p></br>
    <p>
    <%= link_to 'View All Runs', runs_path, class: 'paper-btn' %></br>
    </p></br>
  </div>
</div>
